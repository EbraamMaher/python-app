pipeline{

    agent {label 'agent'}
    
    stages{
        stage('Build image'){
            steps{
                withCredentials(usernameColonPassword(credentialsId: 'docker', userVariable: 'username',passwordVariable: 'password')) {
                sh "docker image ls"
                sh "docker ps"
          
            }
            
            }
            post {
                success {
                    sh "docker version"
                }
                
                }

        }

    }
}
